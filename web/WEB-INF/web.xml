<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>RecreationActivitiesStaffScheduler</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
   </welcome-file-list>
  <servlet>
    <servlet-name>AddEvent</servlet-name>
    <servlet-class>controllers.EventController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controllers.LoginController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddStaff</servlet-name>
    <servlet-class>controllers.StaffController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddEvent</servlet-name>
    <url-pattern>/AddEvent</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddStaff</servlet-name>
    <url-pattern>/AddStaff</url-pattern>
  </servlet-mapping>
  <resource-ref>
  	<description>DB Connection</description>
  	<res-ref-name>jdbc/scorekeeper_scheduling</res-ref-name>
  	<res-type>javax.sql.ConnectionPoolDataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  <env-entry>
  	<env-entry-name>LoginService</env-entry-name>
  	<env-entry-type>java.lang.String</env-entry-type>
  	<env-entry-value>com.RASS.model.services.loginservice.LoginServiceDAOImpl</env-entry-value>
  </env-entry>
  <env-entry>
  	<env-entry-name>AddStaffService</env-entry-name>
  	<env-entry-type>java.lang.String</env-entry-type>
  	<env-entry-value>com.RASS.model.services.addstaffservice.AddStaffDAOImpl</env-entry-value>
  </env-entry>
  <env-entry>
  	<env-entry-name>ListStaffService</env-entry-name>
  	<env-entry-type>java.lang.String</env-entry-type>
  	<env-entry-value>com.RASS.model.services.liststaff.ListStaffDAOImpl</env-entry-value>
  </env-entry>
</web-app>

